<resources>
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="buttonStyle">@style/Button.Light</item>
        <item name="itemTextColor">@style/TextView.Light</item>
        <item name="editTextStyle">@style/EditText.Light</item>
        <item name="alertDialogTheme">@style/AlertDialog.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/black</item>
        <item name="buttonStyle">@style/Button.Dark</item>
        <item name="itemTextColor">@style/TextView.Dark</item>
        <item name="editTextStyle">@style/EditText.Dark</item>
        <item name="alertDialogTheme">@style/AlertDialog.Dark</item>
    </style>

    <style name="Button.Light" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Button.Dark" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextView.Light" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Dark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText.Light" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="EditText.Dark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="AlertDialog.Light" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButton.Light.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButton.Light.Negative</item>
    </style>

    <style name="AlertDialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButton.Dark.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButton.Dark.Negative</item>
    </style>

    <style name="AlertDialogButton.Light.Positive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item> <!-- Cambiar color del texto del bot贸n de confirmar en tema claro -->
    </style>

    <style name="AlertDialogButton.Light.Negative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item> <!-- Cambiar color del texto del bot贸n de denegar en tema claro -->
    </style>

    <style name="AlertDialogButton.Dark.Positive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item> <!-- Cambiar color del texto del bot贸n de confirmar en tema oscuro -->
    </style>

    <style name="AlertDialogButton.Dark.Negative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item> <!-- Cambiar color del texto del bot贸n de denegar en tema oscuro -->
    </style>


</resources>
