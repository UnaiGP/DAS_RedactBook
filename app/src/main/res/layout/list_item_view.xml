<!-- list_item_book.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- TextView para mostrar el título del libro -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- TextView para mostrar el número de páginas del libro -->
    <TextView
        android:id="@+id/pagesTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- LinearLayout que contiene las estrellas de valoración -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <!-- ImageView para la primera estrella -->
        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_star"
            android:layout_marginStart="8dp"
            android:maxWidth="2dp"/>

        <!-- ImageView para la segunda estrella -->
        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_star"
            android:layout_marginStart="8dp"
            android:maxWidth="2dp"/>

        <!-- ImageView para la tercera estrella -->
        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_star"
            android:layout_marginStart="8dp"
            android:maxWidth="2dp"/>

        <!-- ImageView para la cuarta estrella -->
        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_star"
            android:layout_marginStart="8dp"
            android:maxWidth="2dp"/>

        <!-- ImageView para la quinta estrella -->
        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_star"
            android:layout_marginStart="8dp"
            android:maxWidth="2dp"/>

    </LinearLayout>
</LinearLayout>
